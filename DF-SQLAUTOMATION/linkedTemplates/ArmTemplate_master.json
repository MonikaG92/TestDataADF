{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory Name",
			"defaultValue": "DF-SQLAUTOMATION"
		},
		"AzureBlobStorage_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'AzureBlobStorage'"
		},
		"AzureSqlDatabase_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'AzureSqlDatabase'"
		},
		"SQL_ON_PREMISE_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'SQL_ON_PREMISE'"
		},
		"SQL_ON_PREMISE_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'SQL_ON_PREMISE'"
		},
		"inputfiles_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'inputfiles'"
		},
		"SQL_ON_PREMISE_properties_typeProperties_userName": {
			"type": "string",
			"defaultValue": "AP\\gadadmon"
		},
		"inputfiles_properties_typeProperties_host": {
			"type": "string",
			"defaultValue": "C:\\Users\\gadadmon\\Desktop\\Azure\\InputFiles"
		},
		"inputfiles_properties_typeProperties_userId": {
			"type": "string",
			"defaultValue": "AP\\gadadmon"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas Token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"SQL_ON_PREMISE_connectionString": {
						"value": "[parameters('SQL_ON_PREMISE_connectionString')]"
					},
					"SQL_ON_PREMISE_password": {
						"value": "[parameters('SQL_ON_PREMISE_password')]"
					},
					"AzureBlobStorage_connectionString": {
						"value": "[parameters('AzureBlobStorage_connectionString')]"
					},
					"AzureSqlDatabase_connectionString": {
						"value": "[parameters('AzureSqlDatabase_connectionString')]"
					},
					"inputfiles_password": {
						"value": "[parameters('inputfiles_password')]"
					},
					"SQL_ON_PREMISE_properties_typeProperties_userName": {
						"value": "[parameters('SQL_ON_PREMISE_properties_typeProperties_userName')]"
					},
					"inputfiles_properties_typeProperties_host": {
						"value": "[parameters('inputfiles_properties_typeProperties_host')]"
					},
					"inputfiles_properties_typeProperties_userId": {
						"value": "[parameters('inputfiles_properties_typeProperties_userId')]"
					}
				}
			},
			"dependsOn": []
		}
	]
}